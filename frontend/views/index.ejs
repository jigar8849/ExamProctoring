    .portal-card:hover::before {
      transform: scaleX(1);
    }

    .portal-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
      border-color: var(--accent);
    }

    .portal-icon {
