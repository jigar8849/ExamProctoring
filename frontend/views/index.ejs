    }

    .feature-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
      border-color: var(--accent-light);
    }

    .feature-card h3 {
      font-family: 'Playfair Display', serif;
      font-size: 1.6rem;
      color: var(--dark);
      margin-bottom: 1rem;
      font-weight: 700;
    }

    .feature-card p {
      color: var(--gray);
      line-height: 1.8;
      font-size: 1rem;
    }

    /* FOOTER */
    .footer {
      background: var(--dark);
      padding: 2.5rem 5%;
      text-align: center;
    }

    .footer p {
      color: var(--secondary);
      font-size: 0.95rem;
    }

    /* RESPONSIVE */
    @media (max-width: 968px) {
      .hero h1 {
        font-size: 3rem;
      }

      .hero-bento {
        grid-template-columns: repeat(2, 1fr);
      }

      .bento-card.large {
        grid-column: span 1;
      }

      .section-title {
        font-size: 2.2rem;
      }

      .portals-grid,
      .process-grid,
      .features-grid {
        grid-template-columns: 1fr;
      }
    }

    @media (max-width: 640px) {
      .hero {
        padding: 5rem 5% 3rem;
      }

      .hero h1 {
        font-size: 2.2rem;
        letter-spacing: -1px;
      }

      .hero-sub {
        font-size: 1rem;
      }

      .hero-cta {
        flex-direction: column;
        width: 100%;
      }

      .btn {
        width: 100%;
        justify-content: center;
      }

      .hero-bento {
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      .bento-stat {
        font-size: 2.5rem;
      }

      .section-title {
        font-size: 1.8rem;
      }
    }
  </style>
</head>
