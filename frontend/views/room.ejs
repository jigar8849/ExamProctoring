<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Live Room</title>
  <script>
    const ROOM_ID = "<%= roomId %>";
    const ROLE = "<%= role %>";
  </script>
  <script defer src="https://unpkg.com/peerjs@1.2.0/dist/peerjs.min.js"></script>
  <script src="/socket.io/socket.io.js" defer></script>
  <script src="/Js/socket.js" defer></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <style>
    body {
      margin: 0;
      height: 100vh;
      display: flex;
      flex-direction: column;
      overflow: hidden;
      font-family: Arial, sans-serif;
    }

    .toolbar {
      display: flex;
      gap: 10px;
      padding: 10px;
      background: #fff;
      border-bottom: 1px solid #ddd;
      align-items: center;
    }

    .toolbar button {
      background: none;
      border: none;
      cursor: pointer;
      padding: 5px;
      font-size: 1.2em;
      transition: transform 0.2s ease, color 0.2s ease;
    }

    .toolbar button.active {
      color: #007bff;
      transform: scale(1.1);
    }

    .toolbar button:hover {
      color: #0056b3;
    }

    .examiner-only {
      display: <%=role==='examiner' ? 'inline-block': 'none' %>;
    }

    .main-container {
      display: flex;
      flex: 1;
      height: calc(100% - 60px);
    }

    .canvas-container {
      flex: 0.8;
      position: relative;
      border-right: 1px solid #ddd;
    }

    canvas {
      width: 100%;
      height: 100%;
      background: #fff;
    }

    .chat-container {
      flex: 0.2;
      display: flex;
      flex-direction: column;
      background: #f5f5f5;
    }

    .chat-messages {
      flex: 1;
      overflow-y: auto;
      padding: 10px;
    }

    .chat-input {
      padding: 10px;
      border-top: 1px solid #ddd;
    }

    .chat-input input {
      width: 100%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .video-container {
      position: fixed;
      bottom: 20px;
      right: 20px;
      width: 200px;
      height: 150px;
      border: 2px solid #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
      z-index: 100;
    }

    .video-container video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    #remote-video-container {
      position: fixed;
      bottom: 20px;
      left: 20px;
      width: 200px;
      height: 150px;
      border: 2px solid #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
      z-index: 100;
    }

    #remote-video-container video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .canvas-text-input {
      position: absolute;
      border: none;
      border-bottom: 1px solid #000;
      font: 16px Arial;
      background: transparent;
      outline: none;
    }
  </style>
</head>

<body>
  <div class="toolbar">
    <button id="share-btn" title="Share Room"><i class="fa-solid fa-share"></i> Share Room</button>
    <span class="examiner-only">
      <button id="camera-btn" title="Toggle Camera"><i class="fa-solid fa-video"></i></button>
      <button id="mic-btn" title="Toggle Microphone"><i class="fa-solid fa-microphone"></i></button>
      <button id="pen-btn" title="Pen Tool"><i class="fa-solid fa-pen"></i></button>
      <button id="text-btn" title="Text Tool"><i class="fa-solid fa-font"></i></button>
      <button id="clear-btn" title="Clear Canvas"><i class="fa-solid fa-eraser"></i></button>
    </span>
  </div>
  <div class="main-container">
    <div class="canvas-container" id="canvas-container">
      <canvas id="whiteboard"></canvas>
    </div>
    <div class="chat-container">
      <div class="chat-messages" id="chat-messages"></div>
      <div class="chat-input">
        <input type="text" id="chat-input" placeholder="Type your message..." />
      </div>
    </div>
  </div>
  <div class="video-container">
    <video id="local-video" autoplay muted></video>
  </div>
  <div id="remote-video-container"></div>
  <div class="subtitle-container " id="subtitle" style="
  width: auto;
  height: 5rem; font-size: larger; font-weight: bolder; text-align: center;"></div>
  <script>
    document.getElementById("share-btn").addEventListener("click", () => {
      const roomUrl = window.location.href;
      const shareData = {
        title: 'Join My Live Room',
        text: 'Join my live room for interactive collaboration!',
        url: roomUrl,
      };

      if (navigator.share) {
        navigator.share(shareData)
          .then(() => console.log('Room shared successfully'))
          .catch(err => console.error('Error sharing:', err));
      } else {
        navigator.clipboard.writeText(roomUrl)
          .then(() => alert('Room URL copied to clipboard!'))
          .catch(err => console.error('Failed to copy URL:', err));
      }
    });

    if ('webkitSpeechRecognition' in window || 'SpeechRecognition' in window) {
      const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
      const recognition = new SpeechRecognition();
      recognition.continuous = true;
      recognition.interimResults = true;
      recognition.lang = 'auto'; 

      recognition.onresult = (event) => {
        let transcript = '';
        for (let i = event.resultIndex; i < event.results.length; i++) {
          transcript += event.results[i][0].transcript + ' ';
        }
        document.getElementById('subtitle').innerText = transcript;
      };
      
      recognition.onerror = (event) => {
        console.error('Speech recognition error:', event.error);
      };
      
      recognition.start();
    } else {
      console.warn('Speech recognition is not supported in this browser.');
    }
  </script>
</body>

</html>