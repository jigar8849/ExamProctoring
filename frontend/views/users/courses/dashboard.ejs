<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courses Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .course-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .course-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .manage-btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 8px 15px;
            font-size: 14px;
            border-radius: 5px;
            text-decoration: none;
        }

        .manage-btn:hover {
            background-color: #0056b3;
            color: #fff;
        }

        .card-body p {
            color: #555;
        }

        .card-footer {
            font-size: 0.875rem;
            color: #888;
        }
        
        .accordion-button {
            background-color: #f8f9fa;
            color: #495057;
            border: 1px solid #ddd;
        }

        .accordion-button:not(.collapsed) {
            background-color: #007bff;
            color: white;
        }

        .accordion-body {
            background-color: #f9f9f9;
        }

        .list-group-item {
            background-color: transparent;
            border: none;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container py-4">
        <h1 class="mb-4 text-center">Your Courses</h1>

        <% if (courses && courses.length > 0) { %>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                <% courses.forEach(course => { %>
                    <div class="col">
                        <div class="card course-card h-100 shadow-sm rounded-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h3 class="card-title mb-0"><%= course.courseName %></h3>
                                    <a href="/examiner/courses/<%= course._id %>" class="manage-btn mb-3">Manage</a>
                                </div>
                                
                                <p class="card-text"><%= course.courseDescription %></p>
                                
                                <% if (course.subjects && course.subjects.length > 0) { %>
                                    <div class="accordion" id="accordion-<%= course._id %>">
                                        <% course.subjects.forEach((subject, index) => { %>
                                            <div class="accordion-item">
                                                <h2 class="accordion-header">
                                                    <button class="accordion-button collapsed" type="button" 
                                                            data-bs-toggle="collapse" 
                                                            data-bs-target="#collapse-<%= course._id %>-<%= index %>">
                                                        <%= subject.subjectName %>
                                                    </button>
                                                </h2>
                                                <div id="collapse-<%= course._id %>-<%= index %>" 
                                                     class="accordion-collapse collapse" 
                                                     data-bs-parent="#accordion-<%= course._id %>">
                                                    <div class="accordion-body">
                                                        <ul class="list-group list-group-flush">
                                                            <% subject.chapters.forEach(chapter => { %>
                                                                <li class="list-group-item">
                                                                    Chapter <%= chapter.chapterNumber %>: <%= chapter.chapterName %> 
                                                                </li>
                                                            <% }) %>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }) %>
                                    </div>
                                <% } else { %>
                                    <p class="text-muted mt-3">No subjects added yet</p>
                                <% } %>
                            </div>
                            <div class="card-footer bg-transparent">
                                <small class="text-muted">
                                    Created: <%= new Date(course.createdAt).toLocaleDateString() %>
                                </small>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="alert alert-info text-center">
                No courses found. Create your first course!
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
