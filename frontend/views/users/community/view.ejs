<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>View Post</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <style>
    .post-img { max-height: 400px; object-fit: cover; }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container">
      <a class="navbar-brand" href="/community">Community</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/community">Feed</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/community/new">New Post</a>
          </li>
        </ul>
        <span class="navbar-text">
          Logged in as <strong><%= user.username %></strong>
        </span>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="card shadow-sm mb-4">
      <div class="card-header">
        <strong><%= post.createdBy.username %></strong>
        <span class="text-muted float-end"><%= new Date(post.createdAt).toLocaleString() %></span>
      </div>
      <div class="card-body">
        <p class="card-text"><%= post.content %></p>
        <% if(post.attachments && post.attachments.image) { %>
          <img src="<%= post.attachments.image %>" alt="Post Image" class="img-fluid rounded post-img mb-3">
        <% } %>
        <% if(post.attachments && post.attachments.pdf) { %>
          <p>
            <i class="bi bi-file-earmark-pdf-fill text-danger"></i>
            PDF: <a href="<%= post.attachments.pdf %>" target="_blank">View/Download</a>
          </p>
        <% } %>
      </div>
      <div class="card-footer">
        <form action="/community/<%= post._id %>/like" method="POST" class="d-inline">
          <button type="submit" class="btn btn-sm btn-outline-danger text-white">
            <i class="bi bi-heart" style="color: white;"></i> Like (<%= post.likes.length %>)
          </button>
        </form>
        <span class="ms-3">
          <i class="bi bi-chat"></i> Comments (<%= post.comments.length %>)
        </span>
      </div>
    </div>

    <div class="card shadow-sm mb-4">
      <div class="card-header">
        Comments
      </div>
      <div class="card-body">
        <% if(post.comments && post.comments.length > 0) { %>
          <% post.comments.forEach(comment => { %>
            <div class="mb-3 border-bottom pb-2">
              <strong><%= comment.user.username %></strong>
              <p class="mb-1"><%= comment.comment %></p>
              <small class="text-muted"><%= new Date(comment.createdAt).toLocaleString() %></small>
            </div>
          <% }); %>
        <% } else { %>
          <p class="text-muted">No comments yet.</p>
        <% } %>
      </div>
    </div>

    <div class="card shadow-sm">
      <div class="card-header">
        Add a Comment
      </div>
      <div class="card-body">
        <form action="/community/<%= post._id %>/comment" method="POST">
          <div class="mb-3">
            <textarea name="comment" class="form-control" rows="3" placeholder="Write your comment here..." required></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Post Comment</button>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
