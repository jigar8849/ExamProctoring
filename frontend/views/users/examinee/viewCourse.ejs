<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= course.courseName %> Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ6b+F+J38kBe+Y9HaJ5X0f3ddfKhVVV4ZlFz4YFv1E2M4iP+r47zDXX0KHQw" crossorigin="anonymous">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f7f9fc;
      color: #333;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .course-header {
      text-align: center;
      margin-bottom: 30px;
    }

    .course-header h2 {
      font-size: 2.5rem;
      font-weight: bold;
      color: #007bff;
    }

    .course-description {
      color: #6c757d;
      font-size: 1.2rem;
      line-height: 1.6;
    }

    .subject-card {
      cursor: pointer;
      border: 1px solid #e0e0e0;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      background-color: #fff;
      margin-bottom: 20px;
      transition: all 0.3s ease;
    }

    .subject-card:hover {
      transform: scale(1.02);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .subject-card-header {
      background-color: #007bff;
      color: #fff;
      padding: 15px;
      border-radius: 10px 10px 0 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .subject-card-header h5 {
      font-size: 1.25rem;
    }

    .subject-card-header .badge {
      background-color: #0069d9;
      font-size: 1.5rem;
      cursor: pointer;
    }

    .subject-details {
      padding: 15px;
      display: none;
    }

    .subject-card.open .subject-details {
      display: block;
    }

    .chapter {
      margin-bottom: 15px;
    }

    .chapter h6 {
      font-size: 1.1rem;
      font-weight: 500;
      color: #333;
    }

    .btn-view-recording {
      background-color: #007bff;
      color: white;
      border-radius: 5px;
      padding: 8px 16px;
      font-size: 1rem;
      text-transform: uppercase;
      text-decoration: none;
    }

    .btn-view-recording:hover {
      background-color: #0056b3;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .text-muted {
      font-size: 0.9rem;
    }

    @media (max-width: 768px) {
      .course-header h2 {
        font-size: 2rem;
      }
      .subject-card-header h5 {
        font-size: 1rem;
      }
      .chapter h6 {
        font-size: 1rem;
      }
    }
  </style>
</head>
<body>

  <div class="container mt-5">

    <div class="course-header">
      <h2><%= course.courseName %></h2>
      <p class="course-description"><%= course.courseDescription %></p>
    </div>

    <% course.subjects.forEach(subject => { %>
      <div class="card subject-card">
        <div class="card-header subject-card-header">
          <h5 class="mb-0"><%= subject.subjectName %></h5>
          <span class="badge"><i class="fas fa-plus"></i></span>
        </div>
        <div class="subject-details">
          <div class="chapter-list">
            <% subject.chapters.forEach(chapter => { %>
              <div class="chapter">
                <h6>Chapter <%= chapter.chapterNumber %>: <%= chapter.chapterName %></h6>
                                <% if (chapter.screenRecordingLink) { %>
                  <a href="<%= chapter.screenRecordingLink %>" target="_blank" class="btn btn-view-recording">View Recorded Lecture</a>
                <% } else { %>
                  <p><small class="text-muted">The video will be available when the teacher adds it.</small></p>
                <% } %>
              </div>
            <% }); %>
          </div>
        </div>
      </div>
    <% }); %>

  </div>

  <script>
    document.querySelectorAll('.subject-card').forEach(card => {
      card.addEventListener('click', function() {
        this.classList.toggle('open');
        const badge = this.querySelector('.badge');
        badge.innerHTML = this.classList.contains('open') ? '<i class="fas fa-minus"></i>' : '<i class="fas fa-plus"></i>';
      });
    });
  </script>

</body>
</html>
